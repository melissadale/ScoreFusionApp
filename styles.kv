                                source: root.display_path_density

                    GridLayout:
                        size_hint_y: 0.2
                        cols: 3

                        Label:
                            text: ''
                        Label:
                            text: ''
                            text_size: self.size
                            color: hex('#18453B')
                            bold: True
                        Label:
                            text: ''
                ##################
                ################## right - top
                GridLayout:
                    size_hint_x: 0.3
                    size_hint_y: 0.9
                    rows: 9

                    Label:
                        size_hint_y: 0.1
                        halign: 'left'
                        text_size: self.size
                        markup: True
                        text: root.msg_train
                        color: hex('#0DB14B')
                    Label:
                        size_hint_y: 0.1
                        halign: 'left'
