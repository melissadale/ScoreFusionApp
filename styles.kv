            text: 't: '
            bold: True

        TextInput:
            id: DSig_t
            text: '2'

        Label:
            text: 'r1: '
            bold: True

        TextInput:
            id: DSig_r1
            text: '4'

        Label:
            text: 'r2: '
            bold: True

        TextInput:
            id: DSig_r2
            text: '8'

