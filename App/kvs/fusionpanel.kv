#:import hex kivy.utils.get_color_from_hex

<FusionPanel@GridLayout>
    rows: 2
    cols: 2

    ############################################
    ###                 Left-Top
    ############################################
    GridLayout:
        size_hint_x: 0.7
        size_hint_y: 0.9


    ############################################
    ###                 Right-Top
    ############################################
    GridLayout:
        size_hint_x: 0.3
        size_hint_y: 0.9
        rows: 3

        canvas.before:
            Color:
                rgba: 0.88, 0.88, 0.88, 1
            Rectangle:
                pos: self.pos
                size: self.size

    ############################################
    ###                 Bottom
    ############################################
    Button:
        size_hint_x: 0.7
        size_hint_y: 0.1

        text: 'Run Fusion Experiments'
        background_color: hex('#0DB14B')
        bold: True
        on_press:
            # root.get_data_files()
            # root.loading_animation(root.location)

    Button:
        size_hint_x: 0.3
        size_hint_y: 0.1

        text: 'Reset'
        background_color: hex('#F08521')
        on_press:
            # root.reset_popup()