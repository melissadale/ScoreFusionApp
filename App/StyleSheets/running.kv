<RunningPopup>:
    rows: 3

    Label:
        size_hint_y: 0.2
        text: 'Fusion experiments are running. '
        bold: True
        color: hex('#0DB14B')

    Label:
        size_hint_y: 0.2
        text: 'Please be patient, this may take time depending on the \n fusion rules applied, and the size of the dataset.'
        color: hex('#FFFFFF')

    Image:
        size_hint_y: 0.8
        id: fusing_animation_gif
        height: dp(200)
        # source: './graphics/fusing.gif'
        source: './graphics/SF_GIF.zip'
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        allow_stretch: True
        size_hint_y: None
        anim_delay: 0.6
        mipmap: True